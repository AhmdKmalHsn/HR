@model Vacation
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
Master Data /Vacation / Create New Vacation

<div class="card">
    <form action="/Vacation/Create" enctype="multipart/form-data" method="post" novalidate="novalidate">
        <div class="container">
            <div class="card-header row" style="  padding-left: 0;padding-right: 0;">
                <div class="col-md-6" style="padding-left:0">
                    <h5 class="text-capitalize btn">Vacation</h5>
                </div>
                <div class="col-md-6" style="text-align:right; padding-right:0">
                    <a class="btn btn-primary" href="/Vacation/Index?Length=8" style="border-radius: 0px 0px 2px 30px;">Back to index</a>
                </div>
            </div>
        </div>
        <div class="container mt-5">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group row">
                        <label for="colFormLabel" class="col-sm-4 col-form-label">ID</label>
                        <div class="col-sm-8">
                            @*<input type="text" class="form-control" placeholder="Id" name="Id">*@
                            @Html.EditorFor(ww => ww.Id, new { htmlAttributes = new { @class = "form-control form-control-sm", Placeholder = "Id", disabled = "true" } })
                            @Html.ValidationMessageFor(ww => ww.Id, "", htmlAttributes: new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="colFormLabel" class="col-sm-4 col-form-label">Name</label>
                        <div class="col-sm-8">
                            @*<input type="text" class="form-control" placeholder="name" name="Id">*@
                            @Html.EditorFor(ww => ww.Name, new { htmlAttributes = new { @class = "form-control form-control-sm", Placeholder = "Name of vancation" } })
                            @Html.ValidationMessageFor(ww => ww.Name, "", htmlAttributes: new { @class = "text-danger" })
                        </div>
                    </div>
                 
                </div>
  <div class="col-md-6">
   <div class="form-group row">
                        <label for="colFormLabel" class="col-sm-4 col-form-label">Date</label>
                        <div class="col-sm-8">
                            @*<input type="date" class="form-control" placeholder="Id" name="Id">*@
                            @Html.EditorFor(ww => ww.Date, new { htmlAttributes = new { @class = "form-control form-control-sm", Placeholder = "Date" } })
                            @Html.ValidationMessageFor(ww => ww.Date, "", htmlAttributes: new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="colFormLabel" class="col-sm-4 col-form-label">Attendance Value</label>
                        <div class="col-sm-8">
                            @*<input type="text" class="form-control" placeholder="Attendance Value" name="Attendance Value">*@
                            @Html.EditorFor(ww => ww.AttendanceValue, new { htmlAttributes = new { @class = "form-control form-control-sm", Placeholder = "Attendance Value" } })
                            @Html.ValidationMessageFor(ww => ww.AttendanceValue, "", htmlAttributes: new { @class = "text-danger" })
                        </div>
                    </div>
</div>

            </div>

            <div class="row mb-3 mt-3">
                <div class="col-md-12">
                    <button class="btn btn-primary" id="demo">Add</button>
                </div>
            </div>
        </div>
    </form>
</div>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>