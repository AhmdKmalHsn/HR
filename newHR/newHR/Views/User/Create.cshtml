    <div class="card">
        <div class="container">
            <div class="card-header row" style="  padding-left: 0;padding-right: 0;">
                <div class="col-md-6" style="padding-left:0">
                    <h5 class="text-capitalize btn">Add User</h5>
                    <!--<div class="card-header-right">
                    <i class="icofont icofont-rounded-down"></i>
                    <i class="icofont icofont-refresh"></i>
                    <i class="icofont icofont-close-circled"></i>
                </div>-->
                </div>
                <div class="col-md-6" style="text-align:right; padding-right:0">
                    <a class="btn btn-primary" href="/User/Index?Length=8" style="border-radius: 0px 0px 2px 30px;">Back to index</a>

                </div>
            </div>
        </div>
        <div class="container mt-5">

            @using (Html.BeginForm("Create", "User", FormMethod.Post, htmlAttributes: new { @class = "needs-validation" }))
            {
                <div class="row">
                    <div class="col-md-12">

                        <div class="modal-body">
                            <form>
                                <div class="row">
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label>First Name <span class="text-danger">*</span></label>
                                            @Html.EditorFor(ee => ee.FirstName, new { htmlAttributes = new { @class = "form-control", Placeholder = "Frist Name" } })
                                            <div class="valid-tooltip">
                                                @Html.ValidationMessageFor(s => s.FirstName, "", htmlAttributes: new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>


                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label>Last Name</label>
                                            @Html.EditorFor(ee => ee.SecondName, new { htmlAttributes = new { @class = "form-control", Placeholder = "Second Name" } })
                                            <div class="valid-tooltip">
                                                @Html.ValidationMessageFor(s => s.SecondName, "", htmlAttributes: new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label>Username <span class="text-danger">*</span></label>
                                            @Html.EditorFor(ee => ee.UserName, new { htmlAttributes = new { @class = "form-control", Placeholder = "User Name" } })
                                            <div class="valid-tooltip">
                                                @Html.ValidationMessageFor(s => s.UserName, "", htmlAttributes: new { @class = "text-danger" })
                                               <!-- <span id="userNameMessage" class="text-danger">this name is taken</span>-->
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label>Email <span class="text-danger">*</span></label>
                                            @Html.EditorFor(ee => ee.Email, new { htmlAttributes = new { @class = "form-control", Placeholder = "Email" } })
                                            <div class="valid-tooltip">
                                                @Html.ValidationMessageFor(s => s.Email, "", htmlAttributes: new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label>Password</label>
                                            @Html.EditorFor(ee => ee.Password, new { htmlAttributes = new { @class = "form-control", Placeholder = "Password" } })
                                            <div class="valid-tooltip">
                                                @Html.ValidationMessageFor(s => s.Password, "", htmlAttributes: new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>


                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label>Confirm Password</label>
                                            @Html.EditorFor(ee => ee.ConfirmPassword, new { htmlAttributes = new { @class = "form-control", Placeholder = "Confirm Password" } })
                                            <div class="valid-tooltip">
                                                @Html.ValidationMessageFor(s => s.ConfirmPassword, "", htmlAttributes: new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label>Address</label>
                                            @Html.EditorFor(ee => ee.Address, new { htmlAttributes = new { @class = "form-control", Placeholder = "Address" } })

                                            <div class="valid-tooltip">
                                                @Html.ValidationMessageFor(s => s.Address, "", htmlAttributes: new { @class = "text-danger" })

                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label>Company</label>
                                            @Html.DropDownListFor(ee => ee.CompanyId, ViewBag.Company as SelectList, htmlAttributes: new { @class = "custom-select form-control-sm w-100 ", Placeholder = "Company" })
                                            <div class="invalid-tooltip">
                                                Please choose a menu.
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label>Role</label>
                                            @Html.DropDownListFor(ee => ee.RoleId, ViewBag.role as SelectList, htmlAttributes: new { @class = "custom-select form-control-sm w-100 ", Placeholder = "Role", Required = "true" })

                                            <div class="invalid-tooltip">
                                                Please choose a menu.
                                            </div>
                                        </div>
                                    </div>

                                </div>
                                <div class="submit-section mt-3 mb-3">
                                    <button class="btn btn-primary submit-btn" type="submit">Add</button>
                                </div>

                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

<script type="text/javascript" src="~/bower_components/jquery/js/jquery.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

<script>
    $('#UserName').on('keyup', function () {

        if (this.value.length > 4) {

            $.ajax({
                type: 'POST',
                url: 'CheckUserName',
                dataType: 'json',
                data: { username: $('#UserName').val() },
                success: function (mems) {
                    if (mems == true) {
                        $("#userNameMessage").show();
                    }
                    else
                        $("#userNameMessage").hide();
                },
                error: function (ex) {
                    alert('Failed to retrieve states.' + ex);
                }
            });
        }
    });
</script>

<script>
    var t = document.title;
    document.title = t + "- Create New User"
</script>
