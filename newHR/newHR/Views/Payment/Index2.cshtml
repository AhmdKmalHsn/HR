@model IEnumerable<Model.ViewModel.PaymentVM>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

    string Id = Session["login"].ToString();
    var User = Services.UserService.GetById(int.Parse(Id));
    var role = Services.RoleService.GetById(int.Parse(User.RoleId.ToString()));
}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
Advanced / Payment 

@if (Model == null)
{
    <script>
        alert("No data to show");
    </script>
}


else
{
    <div class="card">
        <div class="row container">
            <div class="col-md-9 mt-4">
                @if (role.Payment == RoleStatus.Full || role.Payment == RoleStatus.Add)
                {
                    @Html.ActionLink("Create new payment", "Create", "Payment", htmlAttributes: new { @class = "btn btn-primary" })
                }

            </div>
            <div style="text-align:right !important" class="col-md-3">
                <input class="mt-4  ml-2 form-control input-sm w-100" onkeyup="myFunction()" id="myInput" type="search" placeholder="search...." aria-controls="add-row-table">
                <br />
            </div>
        </div>
        <div class="">
            <div class="table-responsive">
                <table class="table table-striped table-bordered" id="example-1">
                    <thead>
                        <tr>
                            <th style="display: none;">#</th>
                            <th style="text-align:center">#</th>
                            <th style="text-align:center">
                                Employee No
                                <input class="form-control" id="EmployeeNo" type="text" placeholder="Search..">

                            </th>
                            <th style="text-align:center">
                                File No.
                                <input class="form-control" id="FileNo" type="text" placeholder="Search..">

                            </th>
                            <th style="text-align:center">
                                Name
                                <input class="form-control" id="Name" type="text" placeholder="Search..">

                            </th>
                            <th style="text-align:center">
                                Date
                                <input class="form-control" id="Date" type="text" placeholder="Search..">

                            </th>
                            <th style="text-align:center">
                                Recurring / OneTime
                                <input class="form-control" id="Recurring" type="text" placeholder="Search..">

                            </th>

                            @if (role.Payment == RoleStatus.Full || role.Payment == RoleStatus.Edit)
                            {
                                <th style="text-align:center">Edit</th>
                            }
                        </tr>
                    </thead>
                    <tbody id="myTable">
                        @{ int count = 1;}
                        @foreach (var item in Model)
                        {
                        <tr>

                            <td style="text-align:center">@(count)</td>
                            <td style="text-align:center">@Html.DisplayFor(ww => item.EmployeeNo)</td>
                            <td style="text-align:center">@Html.DisplayFor(ww => item.FileNo)</td>
                            <td style="text-align:center">@Html.DisplayFor(ww => item.Name)</td>
                            <td style="text-align:center">@Html.DisplayFor(ww => item.Date)</td>
                            <td style="text-align:center">@Html.DisplayFor(ww => item.RecurringOneTime)</td>
                            @if (role.Payment == RoleStatus.Full || role.Payment == RoleStatus.Edit)
                            {
                                <td style="text-align:center">

                                    @Html.ActionLink("Edit", "Edit", "Payment", routeValues: new { id = item.Id }, htmlAttributes: new { @class = "btn btn-primary" })

                                </td>
                            }
                        </tr>
                            count++;
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>

}
