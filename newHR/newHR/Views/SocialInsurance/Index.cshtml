                    $('#EmployeeId').val('Select Value...');
                    $('#AttendanceTypeId').val('');
                    $('#exampleFormControlTextarea2').val('');
                    $('#HoursNo').val('');
                    $('#DateFrom').val('');
                    $('#TimeFrom').val('');
                    $('#TimeTo').val('');
                }
                else
                    alert("data not saved");
            },
