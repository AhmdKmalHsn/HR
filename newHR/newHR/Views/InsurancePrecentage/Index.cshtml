@model IEnumerable<Model.InsurancePrecentage>
@{
    /**/

    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-6">
        @Html.ActionLink("Create New Insurance Precentage ", "Create", "InsurancePrecentage", htmlAttributes: new { @class = "btn btn-primary" })
    </div>
    <div class="col-md-6" style="text-align:right">
        <a href="/Settings/Index" class="btn btn-primary" style="border-radius: 0px 0px 2px 30px;">Back to settings</a>

    </div>
</div>
<br />
<br />

@if (Model != null)
{
    <div class="card">

        <div class="">
            <div class="table-responsive">
                <table class="table table-striped table-bordered" id="example-1">
                    <thead>
                        <tr>
                            <th style="display: none;">#</th>
                            <th style="text-align:center">#</th>
                            <th style="text-align:center">Id</th>
                            <th style="text-align:center">%of Fixed Salart For Employee Contrribution</th>
                            <th style="text-align:center">%of Variable Salart ForEmployee Contrribution</th>
                            <th style="text-align:center"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @{ int count = 1;}
                        @foreach (var item in Model)
                        {
                        <tr>

                            <td style="text-align:center">@(count)</td>
                            <td style="text-align:center">@Html.DisplayFor(ww => item.Id)</td>
                            <td style="text-align:center">@Html.DisplayFor(ww => item.ofFixedSalartForEmployeeContrribution)</td>
                            <td style="text-align:center">@Html.DisplayFor(ww => item.ofVariableSalartForEmployeeContrribution)</td>
                            <td style="text-align:center">

                                @Html.ActionLink("Edit", "Edit", "InsurancePrecentage", routeValues: new { id = item.Id }, htmlAttributes: new { @class = "btn btn-primary" })

                            </td>
                        </tr>
                            count++;
                        }
                    </tbody>
                </table>
            </div>

        </div>

    </div>
 
}

else
{
    <script>
        alert("There is no data")
    </script>
}
<script>
    $(function () {
        var lenght = $('#myTable tr').length;
        console.log(lenght);
        if (lenght > 1) {
            $('.table-responsive').css('overflow', "scroll");
            $('.table-responsive').css('height', "100px")

        }
        else {
            $('.table-responsive').css('overflow', "hidden");

        }

    })
</script>


