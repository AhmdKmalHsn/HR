                    $('#AbsenceTypeId').val('');
                    $('#exampleFormControlTextarea2').val('');
                    $('#HoursNo').val('');
                    $('#DateFrom').val('');
                    $('#TimeFrom').val('');
                    $('#TimeTo').val('');
                }
