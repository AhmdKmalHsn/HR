function del(r) {
        var i = r.parentNode.parentNode.rowIndex;
        id = document.getElementById("tbl").rows[i].cells[1].innerHTML;

        var result = confirm("Want to delete?");
        if (result) {

            //getData(id);
            $.ajax({
                url: "delete",
                data:
                    {
                        Id: id
                    },
                dataType: "json",
                success: function (data) { alert("تمت العملية بنجاح"); window.location.reload(); },
                fail: function (response) { alert("خطأ");console.log(response); }
            });
        }
}
function getData(id) {
    $.ajax({
        url: "getdata",
        data: {Id:id},
        dataType: "json",
        success: function (data) { console.log(data); },
        fail: function (response) { console.log(response); }
    });
}
function update(r) {
        var i = r.parentNode.parentNode.rowIndex;
        id = document.getElementById("tbl").rows[i].cells[1].innerHTML;
        $.ajax({
            url: "getdata",
            data: { Id: id },
            dataType: "json",
            success: function (response) {
                console.log(response);
                $.each(response, function (key, data) {
                    
                    $('#MacIP').val(data.MacIP);
                    $('#MacType').val(data.MacType);
                    $('#MacName').val(data.MacName);
                });

                $('.formContainer').show();
                $('#createBtn').hide();
                $('#updateBtn').show();
            },
            fail: function (response) { console.log(response); }
        });
    }

$("#createBtn").click(function () {
    
    $.ajax({
        url: "create",
        data:
            {
                MacIP:$('#MacIP').val(),
                MacType:$('#MacType').val(),
                MacName:$('#MacName').val()
            },
        dataType: "json",
        success: function (data) {console.log(data); alert("تمت العملية بنجاح"); window.location.reload(); },
        fail: function (response) { alert("خطأ"); console.log(response); }
    });
});
$("#updateBtn").click(function () {
    $.ajax({
        url: "update",
        data:
            {
                Id: id,
                MacIP: $('#MacIP').val(),
                MacType: $('#MacType').val(),
                MacName: $('#MacName').val()
            },
        dataType: "json",
        success: function (data) { console.log(data); alert(); window.location.reload(); },
        fail: function (response) { console.log(response); }
    });
});

</script>

