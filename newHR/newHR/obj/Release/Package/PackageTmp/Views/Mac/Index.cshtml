@using WebMatrix.Data;
@{
    var db = Database.Open("CS");
    var selectQueryString = " select Id,MacIP,MacType,MacName,IsFixed from Mac";
    ViewBag.Title = "Index";
}
<style>
    table {
        border: 2px solid black;
    }

        table td {
            text-align: center;
            font-size: 24px;
        }

    .formContainer {
        border: 2px solid black;
        width: 80%;
        /*height:80%;*/
        position: fixed;
        top: 10%;
        margin-left: 10%;
        margin-right: 10%;
        background-color: powderblue;
    }

    .formHeader {
        display: flex;
        background-color: #e1d2d2;
        border: 0px double black;
        align-content: stretch;
        justify-content: space-between;
        align-items: stretch;
    }

    #formTable {
        margin-top: 30px;
        border: none;
    }
</style>
<script>
    var machine = [];
    @foreach (var row in db.Query(selectQueryString))
    {
        <text>
            machine.push({IP:'@row.MacIP',dir:'@row.MacType'});
        </text>
    }
</script>
<h2>Index</h2>
<input type="date" id="dateFrom" class="input-lg" value='@DateTime.Now.Date.ToString("yyyy-MM-dd")'>
