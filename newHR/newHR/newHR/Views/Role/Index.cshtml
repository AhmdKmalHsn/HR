                            <td style="text-align:center">@Html.DisplayFor(ww => item.Salary_Sheet)</td>
                            <td style="text-align:center">@Html.DisplayFor(ww => item.Import_Master_Data)</td>
                            <td style="text-align:center">@Html.DisplayFor(ww => item.Payment)</td>
                            <td style="text-align:center">@Html.DisplayFor(ww => item.Additional_Approval)</td>
                            <td style="text-align:center">@Html.DisplayFor(ww => item.OverTime)</td>
                            <td style="text-align:center">@Html.DisplayFor(ww => item.Create_New_User)</td>

                            <td style="text-align:center">@Html.DisplayFor(ww => item.role)</td>
                            <td style="text-align:center">@Html.DisplayFor(ww => item.Settings)</td>
                            @if (role.role == RoleStatus.Full || role.role == RoleStatus.Edit)
                            {
                                <td style="text-align:center">
                                    @Html.ActionLink("Edit", "Edit", "Role", routeValues: new { id = item.Id }, htmlAttributes: new { @class = "btn btn-primary" })
                                </td>
                            }
                        </tr>
                            count++;
                        }
                    </tbody>
                </table>
            </div>

        </div>

    </div>

