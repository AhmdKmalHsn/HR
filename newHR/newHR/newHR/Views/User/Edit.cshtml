@model ViewModel.UserVM
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
 Administration / Users / Update User No @Model.Id
@*User edit*@
<div class="card">

    <div class="container">
        <div class="card-header row" style="  padding-left: 0;padding-right: 0;">
            <div class="col-md-6" style="padding-left:0">
                <h5 class="text-capitalize btn">Update User</h5>
            </div>
            <div class="col-md-6" style="text-align:right; padding-right:0">
                <a class="btn btn-primary" href="/User/Index?Length=8" style="border-radius: 0px 0px 2px 30px;">Back to index</a>

            </div>
        </div>
    </div>
    @using (Html.BeginForm("Edit", "User", FormMethod.Post, htmlAttributes: new { @class = "needs-validation" }))
    {
        <div class="container mt-5">
            <div class="row">

                <div class="modal-body">
                    <form>
                        <div class="row">
                            <div class="col-sm-6" hidden>
                                <div class="form-group">
                                    @Html.EditorFor(ee => ee.Id, new { htmlAttributes = new { @class = "form-control", Placeholder = "Frist Name", disabled = "true" } })
                                </div>
                            </div>

                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label>Username <span class="text-danger">*</span></label>
                                    @Html.EditorFor(ee => ee.UserName, new { htmlAttributes = new { @class = "form-control", Placeholder = "User Name", disabled = "true" } })
                                </div>
                            </div>

                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label>Email <span class="text-danger">*</span></label>
                                    @Html.EditorFor(ee => ee.Email, new { htmlAttributes = new { @class = "form-control", Placeholder = "Email", disabled = "true" } })
                                </div>
                            </div>

                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label>Address</label>
                                    @Html.EditorFor(ee => ee.Address, new { htmlAttributes = new { @class = "form-control", Placeholder = "Address", disabled = "true" } })
                                </div>
                            </div>

                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label>Company</label>
                                    @Html.DropDownListFor(ee => ee.CompanyId, ViewBag.Company as SelectList, htmlAttributes: new { @class = "custom-select form-control-sm w-100 ", Placeholder = "Company" })
                                    <div class="invalid-tooltip">
                                        Please choose a menu.
                                    </div>
                                </div>
                            </div>

                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label>Role</label>
                                    @Html.DropDownListFor(ee => ee.RoleId, ViewBag.role as SelectList, htmlAttributes: new { @class = "custom-select form-control-sm w-100 ", Placeholder = "Role", Required = "true" })
                                    <div class="invalid-tooltip">
                                        Please choose a menu.
                                    </div>
                                </div>
                            </div>

                        </div>
                        <div class="submit-section mt-3 mb-3">
                            <button class="btn btn-primary submit-btn" type="submit">Update</button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    }
    </div>

    <script type="text/javascript" src="~/bower_components/jquery/js/jquery.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script>
        var t = document.title;
        document.title = t + "- Edit User No " + $('#Id').val();
    </script>

