<script>
 var ajax;
 function getTable() {
    ajax = $.ajax({
        type: 'POST',
        dataType: 'JSON',
        url: '/AttTable/Product',
        data: { fileNo: $("#FN").val(), M: $("#M").val(), Y: $("#Y").val() },
        success: function (res) {
            console.log(JSON.parse(res));
            display(JSON.parse(res));
        },
        fail: function (res) 
        {
            //return { ajaxC, res}
            console.log(res)
        }

    })
 }
 function display(data) {
     var html = '<tbody>', week = 0,
         wkAtt = 0, wkAbc = 0, wkVac = 0;
         mnAtt = 0, mnAbc = 0, mnVac = 0;
     for(let i=0;i<data.length;i++)
     {
         if (i % 7 == 0)
         {
             html += `<tr style="background-color:yellow"><tdc olspan="5">الاسبوع - ${i / 7 + 1}</td></tr>`;
             html += `<tr style="background-color:gray">
                    <td>التاريخ</td>
                    <td>اليوم</td>
                    <td>الحضور</td>
                    <td>الاجازة</td>
                    <td>الغياب</td>
                 </tr>`

         }
         if (data[i].name == "Friday") {
             html += `<tr style="background-color:green">
                    <td>${data[i].dateDay.substr(0, 10)}</td>
                    <td>${data[i].name}</td>
                    <td>${data[i].att}</td>
                    <td>${data[i].abc}</td>
                    <td>${data[i].no}</td>
                 </tr>`
                 var AttVac,AbcVac;
                 if(wkVac <= 1.75)
                 {
                    AttVac = wkAtt + wkVac;
                    AbcVac =wkAbc;
                 }
                 else
                 {
                    AttVac = 1.75 + wkAtt;
                    AbcVac = wkAbc - 1.75;
                 }
             html += `<tr style="background-color:violet">
                    
                    <td colspan=2> الاجمالي</td>
                    <td colspan=2>${AttVac}</td>
                    
                    <td>${AbcVac}</td>
                 </tr>`
             wkAtt = 0;
             wkVac = 0;
             wkAbc = 0;
         }

         else
         {
              
             wkAtt += data[i].att;
             wkVac += data[i].abc;
             wkAbc += data[i].no;
             mnAtt += data[i].att;
             mnVac += data[i].abc;
             mnAbc += data[i].no;
             html += `<tr>
                    <td>${data[i].dateDay.substr(0, 10)}</td>
                    <td>${data[i].name}</td>
                    <td>${data[i].att}</td>
                    <td>${data[i].abc}</td>
                    <td>${data[i].no}</td>
                 </tr>`
         } 
     }
     html += `<tr style="background-color:purple">

                    <td colspan=2> اجمالي الشهر</td>
                    <td>${mnAtt}</td>
                    <td>${mnVac}</td>
                    <td>${mnAbc}</td>
                 </tr>`
     html += '</tbody>';
     $("#mytable").html(html);
         
 }

</script>